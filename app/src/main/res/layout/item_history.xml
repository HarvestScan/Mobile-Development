<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/outline_bg"
    android:layout_marginTop="8dp"
    android:padding="7dp">
    <ImageView
        android:id="@+id/image_history_scan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/image_leaf_item_history" />

    <TextView
        android:id="@+id/tv_label_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/image_history_scan"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_score_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_label_history"
        app:layout_constraintStart_toEndOf="@id/image_history_scan"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"/>

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/delete_button_item_history"
        app:layout_constraintTop_toTopOf="@id/image_history_scan"
        app:layout_constraintBottom_toBottomOf="@id/image_history_scan"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
