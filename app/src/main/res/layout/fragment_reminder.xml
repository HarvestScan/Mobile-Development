<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.reminder.ReminderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Judul Set Reminder -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Set Reminder"
            android:textColor="@color/teal_500"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Input nama tanaman diganti menjadi Spinner -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/teal_500"
            app:hintTextColor="@color/black"
            app:boxStrokeWidth="2dp"/>

        <Spinner
            android:id="@+id/spinner_plant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih Tanaman"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_input_reminder_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/teal_500"
            app:hintTextColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_reminder_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Waktu Pengingat"
                android:focusable="false"
                android:clickable="true"
                android:textColorHint="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Layout untuk memilih hari-hari dalam seminggu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Hari Pengingat:"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Checkbox untuk Senin -->

                <!-- Checkbox untuk Selasa -->
                <CheckBox
                    android:id="@+id/checkbox_monday"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:text="Senin" />

                <!-- Checkbox untuk Rabu -->
                <CheckBox
                    android:id="@+id/checkbox_tuesday"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Selasa" />

                <CheckBox
                    android:id="@+id/checkbox_wednesday"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Rabu" />

                <CheckBox
                    android:id="@+id/checkbox_thursday"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="Kamis" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Checkbox untuk Kamis -->

                <!-- Checkbox untuk Jumat -->
                <CheckBox
                    android:id="@+id/checkbox_friday"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Jumat" />

                <CheckBox
                    android:id="@+id/checkbox_saturday"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="Sabtu" />

                <CheckBox
                    android:id="@+id/checkbox_sunday"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Minggu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Checkbox untuk Sabtu -->

                <!-- Checkbox untuk Minggu -->
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_input_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/teal_500"
            app:hintTextColor="@color/black"
            app:helperTextEnabled="true"
            app:helperText="@string/helper_text"
            app:counterEnabled="true"
            app:counterMaxLength="70"
            app:boxStrokeWidth="2dp"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Catatan"
                android:maxLength="70"
                android:textColorHint="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tombol Set Reminder -->
        <Button
            android:id="@+id/setReminderButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Turn On Reminder"
            style="@style/Widget.Material3.Button.Icon"
            android:backgroundTint="@color/teal_500"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
