<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myplant.MyPlantFragment">

    <TextView
        android:id="@+id/textView_my_plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_page_myplants"
        android:textSize="39sp"
        android:textColor="@color/teal_500"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="44dp"
        />

    <Button
        android:id="@+id/button_add_plant"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="@color/teal_500"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:text="@string/add_plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_my_plant"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rw_list_reminder"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/button_add_plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_plant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FDFFE2"
        app:layout_constraintTop_toBottomOf="@id/rw_list_reminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        tools:ignore="MissingConstraints">

        <!-- Layout item untuk setiap daftar tanaman -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#D6D6D6"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Foto tanaman -->
                <ImageView
                    android:id="@+id/image_plant"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plant_image"
                    android:contentDescription="Image of the plant" />

                <!-- Nama tanaman -->
                <TextView
                    android:id="@+id/text_plant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Tanaman"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />

                <!-- Tipe tanaman -->
                <TextView
                    android:id="@+id/text_plant_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipe Tanaman"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <!-- Nama botani -->
                <TextView
                    android:id="@+id/text_botanical_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Botani"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>