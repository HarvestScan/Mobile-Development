<resources>

    <style name="Theme.HarvestScan" parent="Theme.MaterialComponents.DayNight">
        <!-- Other theme attributes -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryFixed">@color/black</item>
        <item name="colorOnPrimaryFixedVariant">@color/black</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="BottomSheetTransparent" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ThemeOverlay.CustomEditText" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@android:color/black</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>
</resources>